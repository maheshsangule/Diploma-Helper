<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37386e">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#37386e">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="-70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_3" />

        <com.google.android.material.textview.MaterialTextView

            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/josefinsans_bold"
            android:rotationX="360"
            app:fontFamily="@font/akronim"
            android:text="Welcome Back,\nto your app"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <com.google.android.material.textview.MaterialTextView

            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:fontFamily="@font/josefinsans_bold"
            android:text="Connecting Engineer&apos;s Together"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textIsSelectable="false"
            android:textSize="34sp"
            app:fontFamily="@font/akronim"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/activity_start2_iv1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/logo_banner"
            android:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_start2_cl1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_start2_iv1">

            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/activity_start2_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:drawableStart="@drawable/login_icon_1"
                android:drawableTint="@color/yellow"
                android:paddingStart="20dp"
                android:paddingEnd="30dp"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_start2_cl2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_start2_cl1">

            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/activity_start2_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:drawableStart="@drawable/signup_icon_2"
                android:drawableTint="@color/yellow"
                android:paddingStart="20dp"
                android:paddingEnd="30dp"
                android:text="SignUp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_start2_cl3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_start2_cl2">

            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/activity_start2_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:drawableStart="@drawable/smartphone_icon"
                android:drawableTint="@color/yellow"
                android:paddingStart="20dp"
                android:text="Continue with phone"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
