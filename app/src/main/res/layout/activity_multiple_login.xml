<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.MultipleLoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_welcome_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="-10dp"
            android:rotationX="360"
            android:text="Welcome Back,\nto Your App"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontFamily="@font/akronim"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefinsans_bold"
            android:text="Connecting Engineer&apos;s\nTogether"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textIsSelectable="false"
            android:textSize="38sp"
            app:fontFamily="@font/akronim"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <ImageView
            android:id="@+id/activity_start2_iv1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/ic_welcome2_logo"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:tint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvLogin"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="20dp"
            android:text="Login"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#CCDCDCF2"
            app:cornerRadius="18dp"
            app:icon="@drawable/login_icon_1"
            app:iconPadding="10dp"
            app:iconSize="28dp"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_start2_iv1"
            app:rippleColor="@color/gray" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvSignup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="4dp"
            android:drawableTint="@color/colorPrimary"

            android:fontFamily="@font/poppins_bold"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="SignUp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#CCDCDCF2"
            app:cornerRadius="18dp"
            app:icon="@drawable/signup_icon_2"
            app:iconPadding="10dp"
            app:iconSize="28dp"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLogin"
            app:rippleColor="@color/gray" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvOtpLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="20dp"

            android:text="Continue with phone"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#CCDCDCF2"
            app:cornerRadius="18dp"
            app:icon="@drawable/smartphone_icon"
            app:iconPadding="10dp"
            app:iconSize="28dp"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSignup"
            app:rippleColor="@color/gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
